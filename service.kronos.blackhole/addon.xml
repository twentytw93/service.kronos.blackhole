<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.kronos.blackhole"
       name="Kronos Blackhole"
       version="1.0.0"
       provider-name="Kronos Team">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.service" library="service.py" start="startup"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Tracker blocking firewall for VPN-protected Kronos devices</summary>
        <description lang="en">Blocks DNS, SNI, and HTTP host-level tracker domains silently. Activates only if VPN tunnel is active. Designed for Kodi 21+ and LibreELEC.</description>
        <platform>all</platform>
        <assets>
            <icon>resources/media/k_logo.png</icon>
        </assets>
    </extension>
</addon>